<Window x:Class="Updraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Button Grid.Column="0" Margin="10" Height="100" Width="200" x:Name="btnTrigger" Content="press me" />
        <TextBlock Grid.Column="1" Grid.Row="1" x:Name="tbResults" Margin="10" Width="Auto" Height="Auto" 
                   Background="LightGray"/>
        
    </Grid>
</Window>
